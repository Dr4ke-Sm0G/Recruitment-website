<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        rel="stylesheet">
    <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <link rel="stylesheet" href="/stylesheets/card.css">
    <link rel="stylesheet" href="/stylesheets/table.css">
    <title>Recruteur - Tableau de bord</title>
    <link rel="icon" href="/images/logo_left.png">
</head>

<body>

    <!-- sidebar -->
    <div id="l-sidebar" class="sidebar-active no-transition">

        <!-- header -->
        <div id="sidebar-header" class="d-flex align-items-center">
            <a href="/"><img class="navbar-brand" src="/images/logo.png" alt="logo"></a>
        </div>

        <!-- navigation links -->
        <ul class="list-unstyled d-flex flex-column justify-content-between">

            <!-- top -->
            <div class="top">
                <li class="nav-link link-active">
                    <a href="/recruiter/dashboard" class="text-decoration-none d-block">
                        <i class="fa-solid fa-gauge text-center"></i>
                        <span>Tableau de bord</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="/recruiter/offers" class="text-decoration-none d-block">
                        <i class="fa-solid fa-folder-open text-center"></i>
                        <span>Offres d'emploi</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="/recruiter/applications" class="text-decoration-none d-block">
                        <i class="fa-solid fa-clipboard-user text-center"></i>
                        <span>Candidatures</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="/recruiter/recruiter-requests" class="text-decoration-none d-block">
                        <i class="fa-solid fa-user-plus text-center"></i>
                        <span>Demandes recruteur</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="/recruiter/my-organization" class="text-decoration-none d-block">
                        <i class="fa-solid fa-building text-center"></i>
                        <span>Mon organisation</span>
                    </a>
                </li>
            </div>

            <!-- bottom -->
            <div class="bottom">
                <li class="nav-link">
                    <a href="/logout" class="text-decoration-none d-block">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span>Déconnexion</span>
                    </a>
                </li>
            </div>
        </ul>
    </div>

    <!-- top navbar -->
    <nav id="top-navbar" class="body-padding no-transition">
        <div id="top-navbar-content" class="d-flex flex-row align-items-center justify-content-between">
            <i id="toggler" class="fa-solid fa-bars fa-xl clickable"></i>
            <div class="account d-flex flex-row align-items-center">
                <span><%= user.first_name %> <%= user.last_name %></span>
                <i class="fa-solid fa-user fa-xl clickable"></i>
            </div>
        </div>
    </nav>

    <!-- content -->
    <div id="wrapper" class="body-padding no-transition">
        <div id="content">
            <h1>Tableau de bord</h1>

            <!-- cards -->
            <div id="info-cards" class="d-flex flex-row flex-wrap">

                <!-- number of active offers -->
                <div class="card d-flex flex-row align-items-center">
                    <div class="card-icon">
                        <i class="fa-solid fa-folder-open"></i>
                    </div>
                    <div class="card-value d-flex flex-column">
                        <span class="card-value-nbr"><%= counts.activeOffers %></span>
                        <span class="card-value-text">Offres actives</span>
                    </div>
                </div>

                <!-- number of expired offers -->
                <div class="card d-flex flex-row align-items-center">
                    <div class="card-icon">
                        <i class="fa-solid fa-folder-open"></i>
                    </div>
                    <div class="card-value d-flex flex-column">
                        <span class="card-value-nbr"><%= counts.expiredOffers %></span>
                        <span class="card-value-text">Offres expirées</span>
                    </div>
                </div>

                <!-- number of pending applications -->
                <div class="card d-flex flex-row align-items-center">
                    <div class="card-icon">
                        <i class="fa-solid fa-clipboard-user"></i>
                    </div>
                    <div class="card-value d-flex flex-column">
                        <span class="card-value-nbr"><%= counts.pendingApplications %></span>
                        <span class="card-value-text">Candidatures en attente</span>
                    </div>
                </div>

                <!-- number of recruiters -->
                <div class="card d-flex flex-row align-items-center">
                    <div class="card-icon">
                        <i class="fa-solid fa-person-circle-check"></i>
                    </div>
                    <div class="card-value d-flex flex-column">
                        <span class="card-value-nbr"><%= counts.recruiters %></span>
                        <span class="card-value-text">Recruteurs actifs</span>
                    </div>
                </div>

                <!-- number of pending recruiter requests -->
                <div class="card d-flex flex-row align-items-center">
                    <div class="card-icon">
                        <i class="fa-solid fa-user-plus"></i>
                    </div>
                    <div class="card-value d-flex flex-column">
                        <span class="card-value-nbr"><%= counts.pendingRecruiterRequests %></span>
                        <span class="card-value-text">Demandes recruteur en attente</span>
                    </div>
                </div>

            </div>

            <!-- tables -->

            <!-- job offers table -->
            <div id="offers-table" class="table-overview">

                <!-- table header -->
                <div class="table-header d-flex flew-row justify-content-between align-items-center">
                    <h2 class="table-title">Dernières offres d'emploi</h2>
                    <div>
                        <button><a href="/recruiter/offers/create" class="text-decoration-none">Créer</a></button>
                        <button><a href="/recruiter/offers" class="text-decoration-none">Voir plus</a></button>
                    </div>
                </div>

                <div class="overview-table">
                    <!-- table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Numéro</td>
                                <td>Titre</td>
                                <td>Date de création</td>
                                <td class="text-center">Statut</td>
                                <td class="text-center">Candidatures</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            <% offers.forEach((offer) => { %>
                            <tr scope="row">
                                <td>
                                    <span class="fw-bold">Offre n°<%= offer.offer_id %></span>
                                </td>
                                <td>
                                    <span class="fw-bold"><%= offer.job_title %></span>
                                </td>
                                <td>
                                    <span><%= moment(offer.creation_date).format('DD/MM/YYYY') %></span>
                                </td>
                                <td class="cell-status text-center">
                                    <span class="status" data-status="<%= offer.status %>">
                                        <%= util.getStatusName(offer.status) %>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="/recruiter/offers/<%= offer.offer_id %>/applications" class="text-decoration-none">
                                        <i class="fa-solid fa-eye action action-show"></i>
                                    </a>
                                </td>
                                <td class="cell-edit">
                                    <a href="/recruiter/offers/<%= offer.offer_id %>/edit">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>

                            <!-- case in which no data is found -->
                            <% if(offers.length === 0) { %>
                                <tr><td colspan="10" class="text-center">Aucune offre trouvée.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- applications table -->
            <div id="applications-table" class="table-overview">

                <!-- table header -->
                <div class="table-header d-flex flew-row justify-content-between align-items-center">
                    <h2 class="table-title">Dernières candidatures</h2>
                    <button><a href="/recruiter/applications" class="text-decoration-none">Voir plus</a></button>
                </div>

                <div class="overview-table">
                    <!-- table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <td>N° Offre</td>
                                <td>Candidat</td>
                                <td>Contact</td>
                                <td class="text-center">Statut</td>
                                <td class="text-center">Offre</td>
                                <td class="text-center">Candidature</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% applications.forEach((application) => { %>
                            <tr scope="row">
                                <td>
                                    <span class="fw-bold">Offre n°<%= application.job_offer %></span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold"><%= application.first_name %> <%= application.last_name %></span>
                                        <span><%= moment(application.date).format('DD/MM/YYYY') %></span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span><%= application.email %></span>
                                        <span><%= application.phone %></span>
                                    </div>
                                </td>
                                <td class="cell-status text-center">
                                    <span class="status" data-status="<%= application.status %>">
                                    <%= util.getStatusName(application.status) %>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="/recruiter/offers/<%= application.job_offer %>" class="text-decoration-none">
                                        <i class="fa-solid fa-eye action action-show"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/recruiter/offers/<%= application.job_offer %>/applications/<%= application.email %>" class="text-decoration-none">
                                        <i class="fa-solid fa-eye action action-show"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>

                            <!-- case in which no data is found -->
                            <% if(applications.length === 0) { %>
                                <tr><td colspan="10" class="text-center">Aucune candidature trouvée.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- recruiter requests table -->
            <div id="recruiter-requests-table" class="table-overview">

                <!-- table header -->
                <div class="table-header d-flex flew-row justify-content-between align-items-center">
                    <h2 class="table-title">Dernières demandes recruteur</h2>
                    <button><a href="/recruiter/recruiter-requests" class="text-decoration-none">Voir plus</a></button>
                </div>

                <div class="overview-table">
                    <!-- table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Nom</td>
                                <td>Contact</td>
                                <td class="text-center">Statut</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            <% recruiterRequests.forEach((request) => { %>
                            <tr scope="row" data-candidate="<%= request.user_email %>" data-organization="<%= request.organization_siren %>">
                                <td class="cell-name d-flex flex-row align-items-center">
                                    <div><i class="fa-solid fa-user-plus"></i></div>
                                    <div class="info d-flex flex-column">
                                        <span><%= request.user_first_name %> <%= request.user_last_name %></span>
                                        <span><%= moment(request.date).format('DD/MM/YYYY') %></span>
                                    </div>
                                </td>
                                <td class="cell-name">
                                    <div class="d-flex flex-column">
                                        <span><%= request.user_email %></span>
                                        <span><%= request.user_phone %></span>
                                    </div>
                                </td>
                                <td class="cell-status text-center">
                                    <span class="status" data-status="<%= request.status %>">
                                    <%= util.getStatusName(request.status) %>
                                    </span>
                                </td>
                                <td class="cell-edit text-center">
                                    <% if(request.status === 'pending') { %>
                                    <i class="fa-solid fa-circle-check action action-accept"></i>
                                    <i class="fa-solid fa-circle-xmark action action-refuse"></i>
                                    <% } %>
                                    <i class="fa-solid fa-trash action action-delete"></i>
                                </td>
                            </tr>
                            <% }) %>

                            <!-- case in which no data is found -->
                            <% if(recruiterRequests.length === 0) { %>
                                <tr><td colspan="10" class="text-center">Aucune demande recruteur trouvée.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </div>

    <!-- toasts -->
    <div id="toast-container" class="toast-container position-fixed"></div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
    <script src="/javascript/dashboard.js"></script>
    <script src="/javascript/toast.js"></script>
    <script src="/javascript/view/recruiter-request.js"></script>
    <script src="/javascript/view/recruiter.js"></script>
</body>

</html>